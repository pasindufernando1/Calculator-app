<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="32dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@color/bluish"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="376dp"
        android:layout_height="223dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif"
        android:gravity="end"
        android:paddingLeft="5dp"
        android:paddingTop="50dp"
        android:paddingRight="5dp"
        android:shadowRadius="5"
        android:text="0"
        android:textColor="@color/ash"
        android:textSize="75sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="375dp"
        android:layout_height="82dp"
        android:layout_below="@id/button0"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blackbg"
        android:text="CLEAR"
        android:textColor="@color/red"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/resultTextView"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blackbg"
        android:text="7"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/resultTextView"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button7"
        android:backgroundTint="@color/blackbg"
        android:text="8"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/resultTextView"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button8"
        android:backgroundTint="@color/blackbg"
        android:text="9"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/resultTextView"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button9"
        android:backgroundTint="@color/blackbg"
        android:text="รท"
        android:textColor="@color/red"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/button7"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blackbg"
        android:text="4"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/button8"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button4"
        android:backgroundTint="@color/blackbg"
        android:text="5"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/button9"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button5"
        android:backgroundTint="@color/blackbg"
        android:text="6"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/buttonDivide"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button6"
        android:backgroundTint="@color/blackbg"
        android:text="ร"
        android:textColor="@color/red"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blackbg"
        android:text="1"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/button5"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button1"
        android:backgroundTint="@color/blackbg"
        android:text="2"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/button6"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button2"
        android:backgroundTint="@color/blackbg"
        android:text="3"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/buttonMultiply"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button3"
        android:backgroundTint="@color/blackbg"
        android:text="-"
        android:textColor="@color/red"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/button1"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blackbg"
        android:text="0"
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/button2"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/button0"
        android:backgroundTint="@color/blackbg"
        android:text="."
        android:textColor="@color/buttontext"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/button3"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/buttonDot"
        android:backgroundTint="@color/yellow"
        android:text="="
        android:textColor="@color/buttontext"
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/buttonSubtract"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/buttonEquals"
        android:backgroundTint="@color/blackbg"
        android:text="+"
        android:textColor="@color/red"
        android:textSize="40sp" />


</RelativeLayout>